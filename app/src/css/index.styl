@font-face
  font-family 'Chopsic'
  font-style normal
  src url('../fonts/Chopsic-font/Chopsic.ttf') format("truetype"), \
      url('../fonts/Chopsic-font/Chopsic.woff') format("woff");

*
  padding 0
  margin 0
  font-family arial

.content
  width 1440px
  p
    margin 15px 0

.logo
  font-family 'Chopsic'
  font-size 24px
  color #cacaca

header
  width 100%
  background #383838
  min-height 100px
  display flex
  align-items center
  justify-content center

main
  flex 1
  display flex
  justify-content center

  .content
    padding 20px 0

footer
  min-height 200px
  background #012840
  align-items center
  justify-content center
  display flex

  .logo
    color white
    font-size 35px

body
  background white
  display flex
  flex-direction column
  min-height 100vh

.hide
  display none

.modal
  min-height 200px
  min-width 200px
  width 300px
  border 1px solid #ddd
  position absolute
  left 0
  top 50%
  right 0
  margin 0 auto
